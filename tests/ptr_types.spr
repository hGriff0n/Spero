def VecArray[T] = {
    let ptr = mut Array[T, 10]
    let (size, cap) = mut (0, 10)

    @safe
    def at = (i :: Size) -> {
        if i < size
            Ok(ptr(i))
        else
            Error("Out of Range")
    }

    @mutable
    def push_back = (val :: T) -> {
        if size == cap {
            cap = 20
            let cur = ptr

            ptr = mut Array[T, 20]
            ptr.map!((i) -> &(cur.at(i))
        }
        
        ptr(size) = val
        size += 1
    }
}

